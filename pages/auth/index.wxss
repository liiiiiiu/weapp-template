/* pages/auth/index.wxss */

.container {
  width: 100vw;
  height: 100vh;
  background: #fff;
  text-align: center;
}

.logo {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 142rpx;
  height: 142rpx;
  border-radius: 20rpx;
  margin: auto;
  margin-top: 174rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 20rpx #ddd;
}

.logo image {
  width: 72%;
  height: auto;
}

.btn {
  width: 100% !important;
  height: 82rpx;
  margin-top: 200rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  line-height: 1.8;
  border-radius: 100rpx;
}

.circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #EFAB2B;
  position: absolute;
  right: -120rpx;
  top: 200rpx;
  z-index: 10;
  opacity: 0.2;
}

.square {
  width: 140rpx;
  height: 140rpx;
  background: #E8797D;
  position: absolute;
  left: 96rpx;
  top: -86rpx;
  z-index: 10;
  opacity: 0.2;
  transform: rotate(50deg);
}

.tri {
  width: 100rpx;
  height: 140rpx;
  background: #08D9A1;
  position: absolute;
  left: -75rpx;
  top: 195rpx;
  z-index: 10;
  opacity: 0.2;
  transform: rotate(50deg);
}