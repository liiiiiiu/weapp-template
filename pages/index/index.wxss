/** index.wxss **/

.app {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  margin-top: 60rpx;
}

.app .logo {
  width: 64rpx;
  height: auto;
  margin-right: 40rpx;
}

.demo-list {
  margin-top: 100rpx;
}

.demo-title {
  margin-bottom: 30rpx;
  font-size: 30rpx;
  color: #909399;
}

.demo-content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.demo-item {
  width: 50%;
  box-sizing: border-box;
  margin-bottom: 15px;
}

.demo-item:nth-child(odd) {
  padding-right: 7.5px;
}

.demo-item:nth-child(even) {
  padding-left: 7.5px;
}

.demo-item-inner {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 124rpx;
  padding: 20rpx 40rpx;
  background: #efefef;
  box-sizing: border-box;
  border-radius: 8rpx;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.04);
}

.demo-item .icon {
  width: 18rpx;
  height: auto;
}

.qrcode {
  width: 240rpx;
  height: auto;
}