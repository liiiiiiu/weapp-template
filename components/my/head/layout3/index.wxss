/* components/my/head/layout3/index.wxss */

.my-hd {
  position: relative;
  padding: 50rpx 30rpx;
  padding-bottom: 106rpx;
  background-color: #fff;
}

/* flex水平布局 */

.my-hd-flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 头像 */

.my-hd-avatar {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.my-hd-open-avatar {
  width: 100%;
  height: 100%;
}

/* 昵称 */

.my-hd-nickName {
  margin-bottom: 20rpx;
}

.my-hd-open-nickName {
  font-size: 32rpx;
}

/* id号 */

.my-hd-id {
  margin-bottom: 20rpx;
}

.my-hd-id-text {
  font-size: 24rpx;
}

/* 数据 */

.my-hd-data-list {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.my-hd-data-item {
  margin-right: 18rpx;
  padding-right: 18rpx;
  border-right: 1px solid #dcdfe6;
}

.my-hd-data-item:last-child {
  border-right-width: 0;
}

.my-hd-data-num,
.my-hd-data-text {
  font-size: 24rpx;
}

.my-hd-data-num {
  margin-right: 4rpx;
}

.my-hd-data-text {
  color: #909399
}

/* 操作 */

.my-hd-operation {
  position: absolute;
  bottom: -110rpx;
  left: 0;
  right: 0;
  z-index: 5;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 92%;
  margin: auto;
  padding: 30rpx;
  background-color: #fff;
  box-shadow: 0 0 12rpx rgba(0, 0, 0, 0.14);
  border-radius: 12rpx;
  box-sizing: border-box;
}

.my-hd-operation-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  margin-left: 40rpx;
}

.my-hd-operation-icon {
  width: 48rpx;
  height: auto;
  margin-bottom: 24rpx;
}

.my-hd-operation-text {
  font-size: 24rpx;
  color: #606266;
}