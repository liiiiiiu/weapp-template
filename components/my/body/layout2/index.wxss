/* components/my/body/layout2/index.wxss */

.my-bd {
  position: relative;
}

/* flex水平布局 */

.my-bd-flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 操作 */

.my-bd-operation {
  margin-bottom: 14rpx;
  background-color: #fff;
}

.my-bd-operation-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 102rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e4e7ed;
}

.my-bd-operation-item:last-child {
  border-bottom-width: 0;
}

.my-bd-operation-icon {
  width: 58rpx;
  height: auto;
  margin-right: 24rpx;
}

.my-bd-operation-secondary-text {
  font-size: 24rpx;
  color: #909399;
}

.my-bd-operation-arrow {
  width: 14rpx;
  height: auto;
  margin-left: 16rpx;
}