/* 操作 */

.my-bd-operation {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.my-bd-operation:last-child {
  margin-bottom: 0;
}

.my-bd-operation-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  margin-right: 20rpx;
  margin-left: 20rpx;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 12rpx;
}

.my-bd-operation-icon {
  width: 102rpx;
  height: auto;
  margin-bottom: 40rpx;
}

.my-bd-operation-text {
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
}

.my-bd-operation-secondary-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #909399;
  text-align: center;
}